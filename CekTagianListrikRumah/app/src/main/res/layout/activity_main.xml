<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    android:paddingTop="12dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Cek Tagihan Listrik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:src="@drawable/header_img"
                android:layout_width="match_parent"
                android:layout_height="100dp">
            </ImageView>

            <LinearLayout
                android:paddingRight="23dp"
                android:layout_gravity="right"
                android:layout_width="120dp"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:textSize="10sp"
                    android:id="@+id/clearall"
                    style="@style/SendButtons"
                    android:textColor="@color/black"
                    android:layout_marginVertical="8dp"
                    android:layout_marginStart="6dp"
                    android:backgroundTint="@color/white"
                    android:minHeight="12dp"
                    android:text="clear all" />

            </LinearLayout>

            <LinearLayout
                android:padding="12dp"
                android:background="@drawable/round_layout_white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:text="No Meteran/ID PLN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <EditText
                    android:inputType="number"
                    android:textColorHint="#515151"
                    android:textColor="@color/black"
                    android:id="@+id/ed_token"
                    android:hint=".................."
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_riwayat"
                    style="@style/SendButtons"
                    android:backgroundTint="#388E3C"
                    android:minHeight="62dp"
                    android:text="Riwayat" />
                <TextView
                    android:text="  "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cek"
                    style="@style/SendButtons"
                    android:backgroundTint="#388E3C"
                    android:minHeight="62dp"
                    android:text="Cek Tagihan" />

            </LinearLayout>

            //hasil cek data
            <LinearLayout
                android:id="@+id/layoutHasil"
                android:visibility="visible"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/round_layout_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                //baris id
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="102dp"
                        android:layout_height="wrap_content"
                        android:text="ID"/>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/tv_idmeteran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":..............."/>
                </LinearLayout>

                //baris nama
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="102dp"
                        android:layout_height="wrap_content"
                        android:text="Nama"/>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/tv_nama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":..............."/>
                </LinearLayout>

                //baris tarif
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="102dp"
                        android:layout_height="wrap_content"
                        android:text="Tarif"/>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/tv_tarif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":..............."/>
                </LinearLayout>


                //baris nama
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="102dp"
                        android:layout_height="wrap_content"
                        android:text="Periode"/>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/tv_periode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":..............."/>
                </LinearLayout>

                //baris nama
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jumlah Tagihan"/>



                </LinearLayout>

                <TextView
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:paddingBottom="12dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:id="@+id/tv_jmltagihan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp....."/>

                <Button
                    android:visibility="gone"
                    android:textSize="12sp"
                    android:id="@+id/btn_simpan_riwayat"
                    android:text="Simpan Ke Riwayat"
                    android:background="@drawable/button_round_white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp">

                </Button>


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:background="@drawable/round_layout_white"
                android:orientation="vertical"
                android:id="@+id/layouterror"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvError"
                    android:textColor="@android:color/holo_red_dark"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="error data tidak ditemukan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/benner">
        </com.google.android.gms.ads.AdView>

    </LinearLayout>









    </LinearLayout>