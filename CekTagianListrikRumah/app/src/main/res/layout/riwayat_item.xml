<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/button_round_white"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/black"
                android:text="Nama"
                android:layout_width="102dp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/tvNamaL"
                android:paddingLeft="12dp"
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/black"
                android:text="No Meteran"
                android:layout_width="102dp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/tvmeteranL"
                android:paddingLeft="12dp"
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/black"
                android:text="Periode"
                android:layout_width="102dp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/tv_periodeL"
                android:paddingLeft="12dp"
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/black"
                android:text="Jumlah Tagihan"
                android:layout_width="102dp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/tvJumlahL"
                android:paddingLeft="12dp"
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout

        android:id="@+id/LayoutAmbildata"
        android:layout_gravity="center"
        android:background="@android:color/holo_green_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            style="@style/SendButtons"
            android:textColor="@color/white"
            android:text="Gunakan Lagi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </TextView>

    </LinearLayout>


</LinearLayout>